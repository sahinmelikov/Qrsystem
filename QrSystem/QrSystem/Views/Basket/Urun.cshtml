@foreach (var qrCodeId in Model.Keys)
{
    var masa = Model[qrCodeId].FirstOrDefault()?.TableName;
    <h3>Masa @masa</h3>

    <table class="table">
        <!-- Tablo başlıkları buraya eklenebilir -->
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Miktar</th>
                <th>Görsel</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model[qrCodeId])
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C2")</td>
                    <td>@product.ProductCount</td>
                    <td><img src="@product.ImagePath" alt="@product.Name" width="100" height="100" /></td>
                </tr>
            }
        </tbody>
    </table>
}
